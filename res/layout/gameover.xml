<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res/com.bestcoolfungames.antsmasher"
    android:id="@id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_game"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/playButton"
        android:layout_width="142.0dip"
        android:layout_height="89.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280.0dip"
        android:src="@drawable/play_again" />

    <ImageView
        android:id="@id/menuButton"
        android:layout_width="132.0dip"
        android:layout_height="69.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380.0dip"
        android:src="@drawable/menu" />

    <ImageView
        android:id="@id/twitterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16.0dip"
        android:layout_marginTop="0.0dip"
        android:src="@drawable/submit_twitter" />

    <ImageView
        android:id="@id/facebookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="0.0dip"
        android:src="@drawable/submit_facebook" />

    <ImageView
        android:id="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/game_over" />

    <RelativeLayout
        android:id="@id/scoreBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0.0dip" >

        <ImageView
            android:id="@id/scoreTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0.0dip"
            android:src="@drawable/scores_over" />

        <TextView
            android:id="@id/playerCurrentScore"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130.0dip"
            android:layout_marginTop="16.0dip"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />

        <TextView
            android:id="@id/playerHighScore"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130.0dip"
            android:layout_marginTop="52.0dip"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />

        <EditText
            android:id="@id/playerNameScore"
            android:layout_width="120.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130.0dip"
            android:layout_marginTop="88.0dip"
            android:background="#00000000"
            android:maxLength="8"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <TextView
        android:id="@id/generic"
        android:layout_width="1.0dip"
        android:layout_height="1.0dip"
        android:layout_marginLeft="-2.0dip"
        android:layout_marginTop="-2.0dip" />

</RelativeLayout>