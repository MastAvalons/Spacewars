        android:layout_marginLeft="0.0dip"
        android:layout_marginTop="0.0dip"
        android:background="#00000000"
        android:gravity="center"
        android:shadowColor="#ff000000"
        android:shadowRadius="8.0"
        android:text="@string/scores"
        android:textColor="#ffffffff"
        android:textSize="38.0sp" />

    <Button
        android:id="@id/storeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6.0dip"
        android:layout_marginTop="148.0dip"
        android:background="@drawable/shop" />

    <TextView
        android:id="@id/storeButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/storeButton"
        android:layout_alignTop="@id/storeButton"
        android:layout_marginLeft="0.0dip"
        android:layout_marginTop="0.0dip"
        android:background="#00000000"
        android:gravity="center"
        android:shadowColor="#ff000000"
        android:shadowRadius="8.0"
        android:text="@string/shop"
        android:textColor="#ffffffff"
        android:textSize="42.0sp" />

    <Button
        android:id="@id/optionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
