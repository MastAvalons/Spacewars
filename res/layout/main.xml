<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res/com.bestcoolfungames.antsmasher"
    android:id="@id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_initial_no_logo"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6.0dip"
        android:layout_marginTop="6.0dip"
        android:src="@drawable/ant_logo" />

    <Button
        android:id="@id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="0.0dip"
        android:background="@drawable/play" />

    <TextView
        android:id="@id/playButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/playButton"
        android:layout_alignTop="@id/playButton"
        android:layout_marginLeft="0.0dip"
        android:layout_marginTop="0.0dip"
        android:background="#00000000"
        android:gravity="center"
        android:shadowColor="#ff000000"
        android:shadowRadius="8.0"
        android:text="@string/play"
        android:textColor="#ffffffff"
        android:textSize="20.0sp" />

    <Button
        android:id="@id/Smash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
