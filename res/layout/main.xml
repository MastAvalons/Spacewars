        android:layout_marginTop="65.0dip"
        android:background="@drawable/smash_your_friends" />

    <TextView
        android:id="@id/smashYourButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/Smash"
        android:layout_alignTop="@id/Smash"
        android:layout_marginLeft="0.0dip"
        android:layout_marginTop="0.0dip"
        android:background="#00000000"
        android:gravity="center"
        android:shadowColor="#ff000000"
        android:shadowRadius="8.0"
        android:text="@string/smash_your"
        android:textColor="#ffffffff"
        android:textSize="28.0sp" />

    <TextView
        android:id="@id/friendsButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Smash"
