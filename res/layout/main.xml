        android:layout_marginLeft="0.0dip"
        android:layout_marginTop="0.0dip"
        android:background="#00000000"
        android:gravity="center"
        android:shadowColor="#ff000000"
        android:shadowRadius="8.0"
        android:text="@string/options"
        android:textColor="#ffffffff"
        android:textSize="38.0sp" />

    <Button
        android:id="@id/gamesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/Smash"
        android:layout_marginTop="2.0dip"
        android:background="@drawable/moregames" />

    <ImageView
        android:id="@id/tap_joy_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0.0dip"
        android:background="@drawable/caixa_de_texto" />

</RelativeLayout>